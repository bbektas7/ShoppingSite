@model Shopping.Entity.Models.Product
@{
    ViewBag.Title = "AddProduct";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";

    var title = "Add Product";
    var buttonText = "Kaydet";

    if (Model != null)
    {
        title = "Update Product";
        buttonText = "Update";
    }
    var categories = ViewBag.Categories as List<Shopping.Entity.Models.Category>;
}
<h2>Add Product</h2>
<br />
<div class="row justify-content-center">
    <div class="col-lg-6">
        <div class="card mb-4 mt-4">
            <div class="card-header">
                <i class="fa-solid fa-plus"></i> @title
            </div>
            <div class="card-body">
                <form method="post" action="/Product/AddProduct">
                    @if (Model != null)
                    {
                        <input type="hidden" class="form-control" name="Id" value="@Model.Id">
                    }
                    <div class="mb-3">
                        <label class="form-label">Product Name</label>
                        <input type="text" class="form-control form-control-sm" name="Name" value="@(Model != null ? Model.Name : "")">
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Barcode</label>
                        <input type="text" class="form-control form-control-sm" name="Barcode" value="@(Model != null ? Model.Barcode : "")">
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Stock</label>
                        <input type="number" class="form-control form-control-sm" name="Stock" value="@(Model != null ? Model.Stock.ToString() : "")">
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Price</label>
                        <input type="text" class="form-control form-control-sm" name="Price" value="@(Model != null ? Model.Price.ToString() : "")">
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Select Category</label>
                        <select class="form-control" name="CategoryId">
                            @foreach(var category in categories) 
                            { 
                            <option @(Model != null && category.Id == Model.CategoryId ? "selected" : "") value="@category.Id">@category.Name</option>
                            }
                        </select>
                    </div>

                    <button class="btn btn-primary" type="submit">
                        @buttonText
                    </button>

                </form>
            </div>
        </div>
    </div>
</div>




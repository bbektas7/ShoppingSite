@model Shopping.Entity.Models.Category
@{
    ViewBag.Title = "AddCategory";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";

    var title = "Add Product";
    var buttonText = "Kaydet";

    if (Model != null)
    {
        title = "Update Product";
        buttonText = "Update";
    }
}

<h2>Add Category</h2>
<br />
<div class="row justify-content-center">
    <div class="col-lg-6">
        <div class="card mb-4 mt-4">
            <div class="card-header">
                <i class="fa-solid fa-plus"></i> @title
            </div>
            <div class="card-body">
                <form method="post" action="/Product/AddCategory">
                    @if (Model != null)
                    {
                        <input type="hidden" class="form-control" name="Id" value="@Model.Id">
                    }
                    <div class="mb-3">
                        <label class="form-label">Category Name</label>
                        <input type="text" class="form-control form-control-sm" name="Name" value="@(Model != null ? Model.Name : "")">
                    </div>
                    <button type="submit" class="btn btn-primary">@buttonText</button>
                </form>
            </div>
        </div>
    </div>
</div>